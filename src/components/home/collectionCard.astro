---
import type { Item } from "../../models/index.interface";
interface Props {
    item: Item;
}

const { item }: Props = Astro.props;
---

<div>
  <img src={item.image} alt={item.title} />
  <h3>{item.title}</h3>
  <p>{item.description}</p>
</div>

<style>
  div {
    max-inline-size: 280px;
    text-align: center;
    
    @media (min-width: 680px) {
      padding: 1rem;
      max-inline-size: 573px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr 1fr;
      grid-auto-flow: row;
      grid-template-areas:
        "image name"
        "image description";
    }
    
    @media (min-width: 1024px) {
      max-inline-size: 280px;
      display: flex;
      flex-direction: column;
    }
  }
  
  h3 {
    margin-block: 1.5rem 1rem;
    grid-area: name;
    
    @media (min-width: 680px) {
      margin: 0 0 1rem 0;
      text-align: start;
      align-self: end;
    }
    
    @media (min-width: 680px) {
      align-self: center;
      text-align: center;
    }
  }
  
  img {
    max-width: 100%;
    width: 250px;
    grid-area: image;
  }
  
  p {
    @media (min-width: 680px) {
      text-align: start;
    }

    @media (min-width: 1024px) {
      text-align: center;
    }
  }
</style>
