---
import type { Item } from "../../models/index.interface";
interface Props {
  item: Item;
}

const { item }: Props = Astro.props;
---

<div>
  <span class:list={[item.image]} aria-hidden="true"></span>
  <h3> {item.title} </h3>
  <p> {item.description} </p>
</div>

<style>
  div {
    max-inline-size: 279px;
    min-height: 100%;
    padding: 51px 33px;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 8px;
    background-color: var(--dark-cyan);
    color: var(--ligth-cream);
    
    @media (min-width: 680px) {
      display: grid;
      grid-template-columns: 1fr 2fr;
      grid-template-rows: 1fr 1fr;
      grid-auto-columns: 1fr;
      grid-auto-flow: row;
      grid-template-areas:
            "icon name"
            "icon description";
      max-inline-size: 573px;
      padding-block: 41px;
      column-gap: 55px;
    }
    
    @media (min-width: 1024px) {
      max-width: 279px;
      display: flex;
    }
  }

  span {
    font-size: 72px;
    color: var(--pale-orange);
    grid-area: icon;
    place-self: center;
    
    @media (min-width: 680px) {
      font-size: 55px;
    }
  }
  
  p {
    text-align: center;

    @media (min-width: 680px) {
      text-align: start;
    }

    @media (min-width: 1024px) {
      text-align: center;
    }
  }
  
  h3 {
    font-size: 1.5rem;
    text-align: center;
    margin: 1.5rem;
    grid-area: name;
    flex: 1;
    
    @media (min-width: 680px) {
      text-align: start;
      margin: 0;
    }

    @media (min-width: 1024px) {
      margin: 1.5rem;
      text-align: center;
    }
  }

</style>
