    @media (min-width: 768px) {
      background-image: url("/images/about/image-hero-whitecup-tablet.webp");
      margin-bottom: 144px;
      padding: 120px 60px;
    }

    @media (min-width: 768px) {
      background-image: url("/images/about/image-hero-whitecup-desktop.webp");
      margin-bottom: 170px;
      padding: 140px 85px;
    }
    
    p {
      color: hsla(60, 2%, 82%, 1.00);
    }
  }
  
  h1 {
    margin-top: 1.5rem;
    font-size: clamp(2.5rem, 0.1563rem + 7.5vw, 4.375rem);
    
