---
  import headQuartersJson from '@assets/data/about-countries-ui.json'
  import CountryCard from './country-card.astro'
---

<section>
  <h2>Our headquarters</h2>
  <div>
    {
      headQuartersJson.map((country) => (
        <CountryCard icon={country.icon} items={country.items} name={country.name}  />
      ))
    }
  </div>
</section>

<style>
  section {
    margin-block: 120px;
    
    @media (min-width: 768px) {
      padding-inline: 12px;
    }
  }
  h2 {
    color: var(--grey);
    margin-bottom: 50px;
    text-align: center;
    
    @media (min-width: 768px) {
      text-align: start;
      margin-bottom: 72px;
    }
  }
  
  div {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 80px;
    
    @media (min-width: 768px) {
      display: grid;
      grid-template-columns: repeat(3, minmax(222px, 300px));
      gap: 2rem;
    }
    
    @media (min-width: 1024px) {
      gap: 4rem;
    }
  }
</style>
